{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="px-10 pt-10">
        <div class="mb-6">
            <a href="{{ path('accueil')}}" class="text-2xl font-bold text-green-500">RestoRate</a>
        </div>

        <div class="md:flex flex-col w-full h-full items-center justify-center md:px-30 lg:px-60">
            <h1 class="text-2xl mb-6 font-semibold">Qu'un seul pas <br/> pour nous rejoindre </h1>

            {{ form_errors(registrationForm) }}

            {{ form_start(registrationForm, {'attr': {'class': 'w-full pt-8'}}) }}
                <div class="flex justify-between mb-2 w-full">
                    <div class="w-full">
                        {{ form_row(registrationForm.nom, {'attr': {'class': 'block outline-none border rounded border-slate-600 p-2 mt-2 w-full', 'placeholder': 'Nom'}}) }}
                    </div>
                    <div class="ml-6 w-full">
                        {{ form_row(registrationForm.prenom, {'attr': {'class': 'block outline-none border rounded border-slate-600 p-2 mt-2 w-full', 'placeholder': 'Prenom'}}) }}
                    </div>
                </div>
                
                <div class="mb-2">
                    {{ form_row(registrationForm.email, {'attr': {'class': 'outline-none border rounded border-slate-600 p-2 block w-full mt-2', 'placeholder': 'E-mail'}}) }}
                </div>
                <div class="mb-2">
                    {{ form_row(registrationForm.plainPassword, {'attr': {'class': 'outline-none border rounded border-slate-600 p-2 block w-full mt-2', 'placeholder': 'Mot de passe'}})}}
                </div>
                <div class="mt-1">
                    {{ form_row(registrationForm.RGPD) }}
                </div>
                <div class="pt-6">
                    {{ form_row(registrationForm.roles, {'attr': {'class': 'outline-none p-4 mt-2'}}) }}
                </div>

                <input type="submit" class="bg-black text-white rounded py-2 mt-4 w-full" value="S'inscire"/>
                
        
            {{ form_end(registrationForm) }}
        </div>

    </div>

    
{% endblock %}
